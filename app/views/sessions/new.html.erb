<div class="LoginBox">
  <div class="inner">
    <%= form_tag sessions_path do -%>
        <p class="LoginInfo">用户名</p>
        <%= text_field_tag 'name', @name, :class=>"info" %>
        <p class="LoginInfo">密码</p>
        <%= password_field_tag 'password', nil, :class=>"info" %>
        <div class="section">
          <a href='/users/new'>注册主机信息</a>
          <%= submit_tag '登录', :class=>'btn2' %>
        </div>
    <% end -%>
  </div>
</div>
